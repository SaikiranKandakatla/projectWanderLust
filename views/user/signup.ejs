<% layout("/layouts/boilerplate")%>

<div class="row mt-3 ms-3">

    <div class="col-6 offset-3">
        <form method="post" action="/signup" class=" col-ls-5"novalidate class="needs-validation">
            <div>
                <label for="Username" class="form-label">Username</label>
                <input id="Username" name="username" type="text" class="form-control" placeholder="enter Username" required >
                <div class="valid-feedback">Looks good!!</div>
            </div>
            <div>
                <label for="email" class="form-label">email</label>
                <input id="email"  name="email"type="text" class="form-control" placeholder="enter email" required>
                <div class="invalid-feedback">enter a valid email</div>
            </div>
            <div>
                <label for="password" class="form-label">password</label>
                <input id="Username" name="password" type="password" class="form-control" placeholder="enter Username" required>
                <div class="invalid-feedback">enter a valid password</div>
            </div>
            <button class="btn btn-outline-success mt-3 mb-3">signUp</button>
            <a href="/login" class="btn btn-outline-success">login</a>
        </form>
    </div>




</div>
