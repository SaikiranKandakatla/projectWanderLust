<% layout("/layouts/boilerplate") %>
<div class="row" >
    <div class="col-8 offset-2">
        <br>
        <h3>Create new listing</h3>
        <div>
            <form method="POST" action="/listings">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input type="text" name="listing[title]" id="title" class="form-control" placeholder="enter a catchy title">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">description</label>
                <textarea name="listing[description]" id="description" class="form-control" placeholder="enter the description" rows="3" cols="25"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">image</label>
            <input type="text" name="listing[image]" id="image" class="form-control" placeholder="ImageUrl/link">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label class="form-label" for="price">price</label>
                    <input type="number" name="listing[price]" id="price" class="form-control" placeholder="1400">
                </div>
                <div class="mb-3 col-md-8">
                    <label class="form-label" for="location">location</label>
                    <input type="text" name="listing[location]"id="location" class="form-control" placeholder="hyderabad">
                </div>
           
            </div>
            <div class="mb-3">
                <label class="form-label" for="country">country</label>
                <input type="text" name="listing[country]" id="country" class="form-control" placeholder="india">
            </div>
            <button class="btn btn-dark add-btn">Add</button>
            <br>
        </form>
        <br>
    
    </div>
</div>
</div>
</body>
