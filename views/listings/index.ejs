<% layout("/layouts/boilerplate") %>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        text-align: center;
        align-items: center;

    }
    .filter{
        margin-top: 2rem;
        margin-right: 2rem;
        opacity: 0.7;
    }
    .filter:hover{
        opacity: 1;
    }
    .filter p{
        font-size: 0.8rem;
    }
    .toggle{
        border:1px solid black;
        margin-left:5rem;
        height: 3rem;
        border-radius: 1rem;
        padding: 0.7rem;
    }
    .show{
        display: none;
    }
</style>
<body >
    <!-- <form method="GET" action="/listings/new">
        <button>
            create new Villa page 
        </button>
    </form> -->
    <div id="filters">
        <div class="filter">
            <i class="fa-solid fa-fire"></i>
            <p>trending</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-bed"></i>
            <p>rooms</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-mountain-city"></i>
            <p>mountain city</p>
        </div>
        <div class="filter">
            <i class="fa-brands fa-fort-awesome"></i>
            <p>castles</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-person-swimming"></i>
            <p>pool</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-tents"></i>
            <p>camping</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-cow"></i>
            <p>farms</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-snowflake"></i>
            <p>arctic</p>
        </div>
    <div class="toggle ms-auto">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display total tax</label>
        </div>
    </div>
    </div>
    <div class="left ">
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <%for(let list of listin){%>
        <a href="/listings/<%=list._id%>" class="card-link">
        <div class="card col listing-card" >
            <img src="<%=list.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <div class="card-img-overlay">abcd</div>
            <div class="card-body">
                <p class="card-text"><b><%=list.title%></b><br>
                    &#8377;<%=list.price.toLocaleString("en-IN")%>/-night
                    <i class="show">&nbsp;&nbsp; +18gst</i>
                </p>
            </div>
        </div>
    </a>
    <%}%>
</div>
</div>
</body>
<script>
    let toggle=document.getElementById("switchCheckDefault");
    toggle.addEventListener("click",()=>{
        let show=document.getElementsByClassName("show");
        // console.log(show)
        for(let info of show){
            if(info.style.display!="inline"){
                info.style.display="inline";
            }else{
                info.style.display="none";
            }
        }
    })
</script>
<script src="/js/script.js"></script>

