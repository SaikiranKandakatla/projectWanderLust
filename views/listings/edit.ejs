<% layout("/layouts/boilerplate") %>
<body >
<div class="row mt-3" >
    <div class="col-8 offset-2">
 
        <h3>Edit your Listing</h3>
        <div>
            <form method="POST" action="/listings/<%=listin._id%>?_method=PUT">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input type="text" name="listing[title]" id="title" class="form-control" value="<%=listin.title%>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">description</label>
                <textarea name="listing[description]" id="description" class="form-control"  rows="3" cols="25"><%=listin.description%></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">image</label>
            <input type="text" name="listing[image]" id="image" class="form-control" value="<%=listin.image%>">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label class="form-label" for="price">price</label>
                    <input type="number" name="listing[price]" id="price" class="form-control" value="<%=listin.price%>">
                </div>
                <div class="mb-3 col-md-8">
                    <label class="form-label" for="location">location</label>
                    <input type="text" name="listing[location]"id="location" class="form-control" value="<%=listin.location%>">
                </div>
           
            </div>
            <div class="mb-3">
                <label class="form-label" for="country">country</label>
                <input type="text" name="listing[country]" id="country" class="form-control" value="<%=listin.country%>">
            </div>
            <button class="btn btn-dark edit-btn mt-3 mb-3">edit</button>
        </form>
        
    
    </div>
</div>
</div>
</body>
