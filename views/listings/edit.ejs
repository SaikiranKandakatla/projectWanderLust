<% layout("/layouts/boilerplate") %>
<body >
<div class="row mt-3" >
    <div class="col-8 offset-2">
 
        <h3>Edit your Listing</h3>
        <div>
            <form method="POST" action="/listings/<%=listin._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input type="text" name="listing[title]" id="title" class="form-control" value="<%=listin.title%>" required>
                <div class="valid-feednack">
                    looks good
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">description</label>
                <textarea name="listing[description]" id="description" class="form-control"  rows="3" cols="25" required><%=listin.description%></textarea>
                <div class="invalid-feednack">
                    enter a valid description
                </div>
            </div>
            <div>
                <h6>original image</h6>
                <img src="<%=originalurl%>" height="150px" width="250px">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">image</label>
                <input type="file" name="listing[image]" id="image" class="form-control">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label class="form-label" for="price">price</label>
                    <input type="text" name="listing[price]" id="price" class="form-control" required value="<%=listin.price%>">
                
                    <div class="invalid-feednack">
                        enter a valid price
                    </div>
                </div>
                <div class="mb-3 col-md-8">
                    <label class="form-label" for="location">location</label>
                    <input type="text" name="listing[location]"id="location" required class="form-control" value="<%=listin.location%>">
                    <div class="invalid-feedback">
                        enter a valid location
                    </div>
                </div>
           
            </div>
            <div class="mb-3">
                <label class="form-label" for="country">country</label>
                <input type="text" name="listing[country]" id="country" required class="form-control" value="<%=listin.country%>">
                <div class="invalid-feedback">
                    enter a valid country
                </div>
            
            </div>
            <button class="btn btn-dark edit-btn mt-3 mb-3">edit</button>
        </form>
        
    
    </div>
</div>
</div>
</body>
<script src="/js/script.js"></script>
